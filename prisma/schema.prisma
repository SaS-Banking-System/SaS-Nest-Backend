// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Account {
  id      Int     @id @default(autoincrement())
  firstName String?
  lastName String?
  uuid    String  @unique
  locked  Boolean @default(false)
  balance Int
}

model Company {
  id        Int    @id @default(autoincrement())
  uuid      String @unique
  name      String @unique
  code      String @unique
  taxAmount Float
}

model Transaction {
  id        Int      @id @default(autoincrement())
  sender    String
  receiver  String
  amount    Int
  tax       Int?      @default(0)
  createdAt DateTime @default(now())
}

